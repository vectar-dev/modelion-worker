{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "A simple worker. Reacting and working for new firebase entrys.",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run serve > ./nginx/static/log.txt",
    "serve": "node dist/server.js",
    "start:watch": "nodemon",
    "eslint": "npx eslint **/*.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/server.ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ]
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Till Hoffmann",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^9.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "uuidv4": "^6.2.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "5.5.43",
    "@types/node": "^14.0.13",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/uuidv4": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.2",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
